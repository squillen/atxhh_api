{
  "name": "atxhh",
  "version": "1.0.0",
  "engines": {
    "node": "12.18.3"
  },
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "description": "The API used for ATX HH",
  "main": "build/server/index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern node_modules/",
    "test": "jest",
    "prebuild": "rm -rf build/*",
    "generate": "graphql-codegen --config codegen.yml",
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/server/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/server/index.ts",
    "build": "tsc",
    "deploy": "git add . && git commit -m Heroku && git push heroku main"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.0",
    "@graphql-codegen/typescript-document-nodes": "1.17.9",
    "@graphql-codegen/typescript-resolvers": "1.18.2",
    "@prisma/cli": "^2.16.1",
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.6.3",
    "@types/moxios": "^0.4.10",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prisma": "^2.16.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@apollo/client": "^3.3.9",
    "@prisma/client": "^2.16.1",
    "apollo-server": "^2.21.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.3",
    "moxios": "^0.4.0"
  }
}
