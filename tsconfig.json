{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "sourceMap": true,                     
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "strict": true,                           
    "moduleResolution": "node",            
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
